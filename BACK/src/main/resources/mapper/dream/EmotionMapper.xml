<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.finalproject.model.dao.EmotionDao">

    <resultMap id="EmotionResultMap" type="com.ssafy.finalproject.model.entity.EmotionScore">
        <id property="emotionId" column="emotion_id"/>
        <result property="emotionName" column="emotion_name"/>
        <result property="score" column="score"/>
    </resultMap>

    <!-- 모든 감정 점수 목록 조회 -->
    <select id="findAll" resultMap="EmotionResultMap">
        SELECT *
        FROM emotion_scores
        ORDER BY score DESC
    </select>

</mapper>
