<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.finalproject.model.dao.NoticeDao">
    <resultMap id="NoticeResultMap" type="com.ssafy.finalproject.model.entity.Notice">
        <id property="noticeId" column="notice_id" />
        <result property="userId" column="user_id" />
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="viewCount" column="view_count" />
        <result property="createdDate" column="created_date" />
        <result property="updatedDate" column="updated_date" />
        <result property="deletedDate" column="deleted_date" />
    </resultMap>

    <!--전체 게시글 조회-->
    <select id="selectAllNotice" resultMap="NoticeResultMap">
        SELECT *
        FROM notice
        WHERE deleted_date IS NULL
        ORDER BY created_date DESC
    </select>

    <!--특정 게시글 조회-->
    <select id="selectNoticeById" resultMap="NoticeResultMap">
        SELECT *
        FROM notice
        WHERE notice_id = #{noticeId}
        AND deleted_date IS NULL
        LIMIT 1
    </select>

    <!--게시글 등록-->
    <insert id="insertNotice" parameterType="Notice">
        INSERT INTO notice (user_id, title, content, view_count, created_date)
        VALUES (#{userId}, #{title}, #{content}, 0, NOW())
    </insert>

    <!--게시글 수정-->
    <update id="updateNotice" parameterType="Notice">
        UPDATE notice
        SET title = #{title},
            content = #{content},
            updated_date = NOW()
        WHERE notice_id = #{noticeId}
    </update>

    <!--게시글 삭제 (Soft Delete)-->
    <update id="deleteNotice" parameterType="long">
        UPDATE notice
        SET deleted_date = NOW()
        WHERE notice_id = #{noticeId}
    </update>

    <!--특정 게시글 좋아요 수 증가 처리-->
    <update id="increaseViewCount">
        UPDATE notice
        SET view_count = view_count + 1
        WHERE notice_id = #{noticeId}
    </update>

</mapper>