<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.finalproject.model.dao.MonthlyAnalysisDao">

    <resultMap id="MonthlyAnalysisResultMap" type="com.ssafy.finalproject.model.entity.MonthlyAnalysis">
        <id property="analysisId" column="analysis_id"/>
        <result property="userId" column="user_id"/>
        <result property="year" column="year"/>
        <result property="month" column="month"/>
        <result property="dreamCount" column="dream_count"/>
        <result property="avgEmotionScore" column="avg_emotion_score"/>
        <result property="monthlyReport" column="monthly_report"/>
        <result property="createdDate" column="created_date"/>
        <result property="updatedDate" column="updated_date"/>
    </resultMap>

    <!-- 월별 분석 저장 (중복 시 업데이트) -->
    <insert id="insertMonthlyAnalysis" parameterType="com.ssafy.finalproject.model.entity.MonthlyAnalysis" useGeneratedKeys="true" keyProperty="analysisId">
        INSERT INTO dream_monthly_analysis (
            user_id, year, month, dream_count, avg_emotion_score, monthly_report, created_date
        )
        VALUES (
            #{userId}, #{year}, #{month}, #{dreamCount}, #{avgEmotionScore}, #{monthlyReport}, NOW()
        )
        ON DUPLICATE KEY UPDATE
            dream_count = VALUES(dream_count),
            avg_emotion_score = VALUES(avg_emotion_score),
            monthly_report = VALUES(monthly_report),
            updated_date = NOW()
    </insert>

    <!-- 월별 분석 조회 -->
    <select id="findByUserIdAndYearMonth" resultMap="MonthlyAnalysisResultMap">
        SELECT *
        FROM dream_monthly_analysis
        WHERE user_id = #{userId}
          AND year = #{year}
          AND month = #{month}
    </select>
    
    <!-- 분석 ID로 조회 -->
    <select id="findById" resultMap="MonthlyAnalysisResultMap">
        SELECT *
        FROM dream_monthly_analysis
        WHERE analysis_id = #{analysisId}
    </select>

    <!-- 월별 분석 수정 -->
    <update id="updateMonthlyAnalysis" parameterType="com.ssafy.finalproject.model.entity.MonthlyAnalysis">
        UPDATE dream_monthly_analysis
        SET dream_count = #{dreamCount},
            avg_emotion_score = #{avgEmotionScore},
            monthly_report = #{monthlyReport},
            updated_date = NOW()
        WHERE analysis_id = #{analysisId}
    </update>

</mapper>
